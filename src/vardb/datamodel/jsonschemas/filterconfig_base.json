{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "required": ["name", "usergroups", "filterconfig", "requirements"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "pattern": "^(.+)$"
        },
        "usergroups": {
            "$id": "#/properties/usergroups",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "order"],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "$id": "#/properties/usergroups/items/properties/name",
                        "type": "string",
                        "pattern": "^(.+)$"
                    },
                    "order": {
                        "$id": "#/properties/usergroups/items/properties/order",
                        "type": "integer",
                        "minimum": 0
                    }
                }
            }
        },
        "requirements": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["function", "params"],
                "additionalProperties": false,
                "properties": {
                    "function": {
                        "enum": ["analysis"]
                    },
                    "params": {
                        "type": "object",
                        "optional": ["is_trio", "is_single", "is_family", "name", "genepanel_name"],
                        "additionalProperties": false,
                        "properties": {
                            "is_trio": {
                                "type": "boolean"
                            },
                            "is_single": {
                                "type": "boolean"
                            },
                            "is_family": {
                                "type": "boolean"
                            },
                            "name": {
                                "type": "string"
                            },
                            "genepanel_name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "filterconfig": {
            "$ref": "filterconfig_v1.json"
        }
    }
}
