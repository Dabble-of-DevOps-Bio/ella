#!/bin/sh

# For dev/demo use only!
# Production uses external database

mkdir $PGDATA
chown postgres $PGDATA
gosu postgres /usr/lib/postgresql/9.6/bin/initdb
gosu postgres /usr/lib/postgresql/9.6/bin/postgres --single -jE <<-EOSQL
  CREATE USER root WITH SUPERUSER PASSWORD 'omgenetics' ;
EOSQL
gosu postgres /usr/lib/postgresql/9.6/bin/postgres
